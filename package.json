{
  "name": "romodel",
  "version": "0.0.14",
  "description": "RoModel is a simple, lightweight, unopinionated, read-only, immutable, model based data access library",
  "main": "cjs/index.js",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "yarn build:ts:esm && yarn build:ts:cjs",
    "build:ts:esm": "tsc -p ./tsconfig.esm.json",
    "build:ts:cjs": "tsc -p ./tsconfig.cjs.json",
    "clear": "rm -rf ./lib ./cjs ./esm ./coverage",
    "format": "prettier --write ./src/**/*.{js,jsx,ts,tsx}",
    "lint": "tslint -c ./tslint.json src/**/*",
    "lint:fix": "tslint --fix -c ./tslint.json src/**/*",
    "start": "yarn clear && yarn test && yarn build",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joonhocho/romodel.git"
  },
  "keywords": [
    "romodel",
    "model",
    "lightweight",
    "readonly",
    "immutable",
    "data",
    "access",
    "library"
  ],
  "author": "Joon Ho Cho",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/joonhocho/romodel/issues"
  },
  "homepage": "https://github.com/joonhocho/romodel#readme",
  "devDependencies": {
    "@types/jest": "^23.1.5",
    "@types/node": "^10.5.2",
    "jest": "^23.4.0",
    "prettier": "^1.13.7",
    "ts-jest": "^23.0.0",
    "tslint": "5.11.0",
    "tslint-config-airbnb": "^5.9.2",
    "tslint-config-prettier": "^1.14.0",
    "typescript": "3.0.0-rc"
  }
}
